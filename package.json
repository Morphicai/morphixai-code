{
    "name": "morphixai-monorepo",
    "version": "1.0.0",
    "description": "MorphixAI Code Monorepo - CLI tools and templates for MorphixAI applications",
    "type": "module",
    "private": true,
    "workspaces": [
        "packages/*",
        "packages/templates/*"
    ],
    "scripts": {
        "dev": "pnpm --filter @morphixai/cli dev",
        "build": "pnpm --recursive run build",
        "test": "pnpm --recursive run test",
        "lint": "pnpm --recursive run lint",
        "publish-packages": "pnpm changeset publish"
    },
    "keywords": [
        "morphixai",
        "react",
        "ionic",
        "mobile",
        "cli",
        "template",
        "monorepo"
    ],
    "author": "MorphixAI",
    "license": "MIT",
    "devDependencies": {
        "@changesets/cli": "^2.27.0",
        "turbo": "^1.10.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=7.0.0"
    },
    "dependencies": {
        "@morphixai/cli": "workspace:^1.0.0"
    }
}
